datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String   @id @default(cuid())
  name     String?
  email    String   @unique
  password String
  image    String?
  role     UserRole @default(USER)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum UserRole {
  USER
  ADMIN
}

model Category {
  id               String  @id @default(cuid())
  name             String
  meta_title       String?
  meta_description String?
  text             String?
  image            String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
